<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_16sdp"
        android:layout_marginRight="@dimen/_16sdp"
        card_view:cardCornerRadius="@dimen/_2sdp"
        card_view:cardElevation="@dimen/_2sdp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mainRelativeLayout">
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/dateRelativeLayout"
                android:background="#9E9E9E" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sr No:- 1"
                    android:textSize="@dimen/_15sdp"
                    android:id="@+id/serialNo"
                    android:padding="@dimen/_5sdp"
                    android:layout_alignParentLeft="true"
                    android:textColor="#ffffff"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12-Aug-2016"
                    android:textSize="@dimen/_15sdp"
                    android:id="@+id/date"
                    android:padding="@dimen/_5sdp"
                    android:layout_alignParentRight="true"
                    android:textColor="#ffffff"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/clientNameLinearLayout"
                android:layout_margin="@dimen/_5sdp"
                android:layout_below="@+id/dateRelativeLayout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Client Name :"
                    android:textSize="@dimen/_14sdp"
                    android:id="@+id/clientNameLabel"
                    android:textColor="@color/colorBlack"
                    android:layout_weight="0.39"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pratik Sonawane"
                    android:textSize="@dimen/_14sdp"
                    android:id="@+id/clientName"
                    android:layout_toRightOf="@+id/clientNameLabel"
                    android:paddingLeft="@dimen/_10sdp"
                    android:textColor="@color/colorBlack"
                    android:layout_weight="0.33" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/executiveNameLinearLayout"
                android:layout_margin="@dimen/_5sdp"
                android:layout_below="@+id/clientNameLinearLayout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Executive Name :"
                    android:textSize="@dimen/_14sdp"
                    android:id="@+id/executiveNameLabel"
                    android:textColor="@color/colorBlack"
                    android:layout_weight="0.39" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pranay Kadam"
                    android:textSize="@dimen/_14sdp"
                    android:id="@+id/executive"

                    android:layout_toRightOf="@+id/executiveNameLabel"
                    android:paddingLeft="@dimen/_10sdp"
                    android:textColor="@color/colorBlack"
                    android:layout_weight="1.14" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/statusLinearLayout"
                android:layout_margin="@dimen/_5sdp"
                android:layout_below="@+id/executiveNameLinearLayout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status :"
                    android:textSize="@dimen/_14sdp"
                    android:id="@+id/statusLabel"
                    android:textColor="@color/colorBlack"
                    android:layout_weight="0.39" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pranay Kadam"
                    android:textSize="@dimen/_14sdp"
                    android:id="@+id/status"
                    android:layout_toRightOf="@+id/statusLabel"
                    android:paddingLeft="@dimen/_10sdp"
                    android:textColor="@color/colorBlack"
                    android:layout_weight="1.14" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/locationRelativeLayout"
                android:background="#26A69A"
                android:layout_below="@+id/statusLinearLayout"
                android:weightSum="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mumbai"
                    android:textSize="@dimen/_15sdp"
                    android:id="@+id/locationOfDelivery"
                    android:padding="@dimen/_5sdp"
                    android:layout_alignParentLeft="true"
                    android:textColor="#ffffff"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vip"
                    android:textSize="@dimen/_15sdp"
                    android:id="@+id/relation"
                    android:layout_alignParentRight="true"
                    android:padding="@dimen/_5sdp"
                    android:textColor="#ffffff" />

            </RelativeLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>