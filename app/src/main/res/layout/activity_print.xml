<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/myscroll"
    android:background="@drawable/black_ng2"
    android:fillViewport="true">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:padding="@dimen/_10sdp">

            <TextView
                android:id="@+id/text_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:hint="ABC"
                android:textColorHint="@color/colorwhite"
                android:textColor="@color/colorwhite"
                android:textSize="@dimen/_15sdp"/>

            <TextView
                android:id="@+id/text_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorwhite"
                android:textColor="@color/colorwhite"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:hint="ABCd"
                android:layout_below="@+id/text_name"
                android:textSize="@dimen/_15sdp"/>

            <TextView
                android:id="@+id/text_relatrion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorwhite"
                android:textColor="@color/colorwhite"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:hint="ABCd"
                android:layout_below="@+id/text_company"
                android:textSize="@dimen/_15sdp"/>

            <TextView
                android:id="@+id/text_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorwhite"
                android:textColor="@color/colorwhite"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:hint="ABCd"
                android:layout_below="@+id/text_relatrion"
                android:textSize="@dimen/_15sdp"/>

            <TextView
                android:id="@+id/text_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorwhite"
                android:textColor="@color/colorwhite"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:hint="ABCd"
                android:layout_below="@+id/text_location"
                android:textSize="@dimen/_15sdp"/>

            <EditText
                android:id="@+id/text_contactper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contact Person"
                android:textColorHint="@color/colorwhite"
                android:textColor="@color/colorwhite"
                android:layout_below="@+id/text_result"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:textSize="@dimen/_15sdp"/>

            <EditText
                android:id="@+id/text_contactno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contact Number"
                android:textColorHint="@color/colorwhite"
                android:textColor="@color/colorwhite"
                android:layout_below="@+id/text_contactper"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_15sdp"/>

            <Spinner
                android:id="@+id/workfor_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_15sdp"
                android:layout_below="@+id/text_contactno"
                android:textColorHint="@color/colorwhite"
                android:textColor="@color/colorwhite"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp" />

            <LinearLayout
                android:id="@+id/btnLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/workfor_spinner"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_alignParentBottom="true">

                <Button
                    android:id="@+id/btndone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Submit"
                    android:textStyle="bold"
                    android:background="#fe3a3a"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="@color/colorwhite"
                    android:onClick="invokeLogin" />

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
