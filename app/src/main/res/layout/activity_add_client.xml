<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/black_ng2"
    android:fillViewport="true">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:weightSum="1">
        <Spinner
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textInputLayoutFname"
            android:layout_below="@+id/title"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:textColorHint="@color/colorwhite">
            <EditText
                android:id="@+id/fullname"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_15sdp"
                android:hint="Full Name"
                android:textColorHint="@color/colorwhite"
                android:textColor="@color/colorwhite"/>
        </android.support.design.widget.TextInputLayout>

        <Spinner
            android:id="@+id/options"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_below="@+id/textInputLayoutFname" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textInputLayoutContactno"
            android:layout_below="@+id/options"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:textColorHint="@color/colorwhite">
            <EditText
                android:id="@+id/Client_Contactno"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_15sdp"
                android:hint="Mobile No"
                android:textColorHint="@color/colorwhite"
                android:textColor="@color/colorwhite"
                android:inputType="phone" />
        </android.support.design.widget.TextInputLayout>

        <!--<TextView-->
            <!--android:layout_width="fill_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:textColorHint="@color/colorwhite"-->
            <!--android:textColor="@color/colorwhite"-->
            <!--android:id="@+id/txtWorkFor"-->
            <!--android:text="Work For"-->
            <!--android:layout_below="@+id/textInputLayoutContactno"-->
            <!--android:layout_marginTop="@dimen/_10sdp"-->
            <!--android:layout_marginBottom="@dimen/_10sdp"-->
            <!--android:textSize="@dimen/_15sdp" />-->

        <Spinner
            android:id="@+id/Client_Company"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_15sdp"
            android:layout_below="@+id/textInputLayoutContactno"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textInputLayoutAddress"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_below="@+id/Client_Company"
            android:textColorHint="@color/colorwhite">
            <EditText
                android:id="@+id/addres"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_15sdp"
                android:hint="Address"
                android:textColorHint="@color/colorwhite"
                android:textColor="@color/colorwhite" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textInputLayoutEmail"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_below="@+id/textInputLayoutAddress"
            android:textColorHint="@color/colorwhite">

            <EditText
                android:id="@+id/email"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_15sdp"
                android:hint="Email"
                android:textColorHint="@color/colorwhite"
                android:textColor="@color/colorwhite" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textInputLayoutlandmark"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_below="@+id/textInputLayoutEmail"
            android:textColorHint="@color/colorwhite">

            <EditText
                android:id="@+id/landmark"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_15sdp"
                android:hint="Landmark"
                android:textColorHint="@color/colorwhite"
                android:textColor="@color/colorwhite" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textInputLayoutlocation"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_below="@+id/textInputLayoutlandmark"
            android:textColorHint="@color/colorwhite">

            <EditText
                android:id="@+id/location"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_15sdp"
                android:layout_below="@+id/landmark"
                android:hint="Location"
                android:textColorHint="@color/colorwhite"
                android:textColor="@color/colorwhite" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textInputLayoutcity"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_below="@+id/textInputLayoutlocation"
            android:textColorHint="@color/colorwhite">

            <EditText
                android:id="@+id/city"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_15sdp"
                android:hint="city"
                android:textColorHint="@color/colorwhite"
                android:textColor="@color/colorwhite" />

        </android.support.design.widget.TextInputLayout>

        <!--<TextView-->
            <!--android:layout_width="fill_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:textColorHint="@color/colorwhite"-->
            <!--android:textColor="@color/colorwhite"-->
            <!--android:text="District"-->
            <!--android:id="@+id/txtDistrict"-->
            <!--android:layout_below="@+id/textInputLayoutcity"-->
            <!--android:layout_marginTop="@dimen/_10sdp"-->
            <!--android:layout_marginBottom="@dimen/_10sdp"-->
            <!--android:textSize="@dimen/_15sdp" />-->

        <Spinner
            android:id="@+id/district"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_15sdp"
            android:layout_below="@+id/textInputLayoutcity"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textInputLayoutstate"
            android:layout_below="@+id/district"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:textColorHint="@color/colorwhite">
            <EditText
                android:id="@+id/state"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_15sdp"
                android:layout_below="@+id/district"
                android:hint="State"
                android:textColorHint="@color/colorwhite"
                android:textColor="@color/colorwhite" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textInputLayoutpincode"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_below="@+id/textInputLayoutstate"
            android:textColorHint="@color/colorwhite">
            <EditText
                android:id="@+id/pincode"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_15sdp"
                android:hint="Pincode"
                android:textColorHint="@color/colorwhite"
                android:textColor="@color/colorwhite" />
        </android.support.design.widget.TextInputLayout>

        <!--<TextView-->
            <!--android:layout_width="fill_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:textColorHint="@color/colorwhite"-->
            <!--android:textColor="@color/colorwhite"-->
            <!--android:id="@+id/txtclientType"-->
            <!--android:text="Client Type"-->
            <!--android:layout_marginTop="@dimen/_10sdp"-->
            <!--android:layout_marginBottom="@dimen/_10sdp"-->
            <!--android:layout_below="@+id/textInputLayoutpincode"-->
            <!--&lt;!&ndash;android:textSize="@dimen/_15sdp" />&ndash;&gt;-->

        <Spinner
            android:id="@+id/ClientTypeId"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_15sdp"
            android:layout_below="@+id/textInputLayoutpincode"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"/>

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:text="Add New Client"
            android:textSize="@dimen/_15sdp"
            android:textColor="@color/colorwhite"
            android:background="#fe3a3a"
            android:layout_below="@+id/ClientTypeId"
            android:onClick="AddClient" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:id="@+id/txtRes"/>

    </RelativeLayout>

</ScrollView>